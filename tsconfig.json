{
  "compilerOptions": {
    "baseUrl": "src",
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "target": "ES2020",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "paths": {
      "@/components/*": ["components/*"],
      "@/components": ["components"],
      "@/utils/*": ["utils/*"],
      "@/utils": ["utils"],
      "@/hooks/*": ["hooks/*"],
      "@/hooks": ["hooks"],
      "@/config/*": ["config/*"],
      "@/config": ["config"],
      "@/state/*": ["state/*"],
      "@/state": ["state"],
      "@/views/*": ["views/*"],
      "@/styles/*": ["styles/*"],
      "@/styles": ["styles"],
      "@/types/*": ["types/*"],
      "@/types": ["types"],
      "@/helpers/*": ["helpers/*"],
      "@/helpers": ["helpers"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": ["next-env.d.ts", "./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["node_modules"]
}
